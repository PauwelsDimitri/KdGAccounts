@model Accounts.Models.AccountTypeRole
@{
    ViewData["Title"] = "Rol verwijderen";
    var src = ViewData["src"];
    var accounttype = Model.AccountType;
}

<h4>Rol verwijderen</h4>

<h5>Wil je deze echt verwijderen?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="DeleteFromIndex">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-outline-dark btn-sm" />
        <br />
        <br />
        <a asp-action="Create" asp-route-id="@accounttype">Terug</a>
    </form>
</div>
