@model Accounts.Models.AccountType

@{
    ViewData["Title"] = "Nieuw accounttype aanmaken";
}

<h4>Nieuw accounttype aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailExt" class="control-label"></label>
                <input asp-for="EmailExt" class="form-control" />
                <span asp-validation-for="EmailExt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountExt" class="control-label"></label>
                <input asp-for="AccountExt" class="form-control" />
                <span asp-validation-for="AccountExt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeleteAfter" class="control-label"></label>
                <input asp-for="DeleteAfter" class="form-control" />
                <span asp-validation-for="DeleteAfter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="CreateAllowed" class="checkbox-inline" />
                <label asp-for="CreateAllowed" class="control-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-outline-dark btn-sm" />
            </div>
        </form>
    </div>
</div>
<div class="footer-spacing">

</div>
<div class="footer-links">
    <p>
        <a asp-action="Index">Terug naar lijst</a>
    </p>
</div>

