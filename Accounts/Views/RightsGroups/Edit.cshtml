@model Accounts.Models.KdgrightsGroup

@{
    ViewData["Title"] = "Rechtengroep wijzigen";
}

<h4>Rechtengroep wijzigen</h4>

<h5>@Model.Name</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxEndDate" class="control-label"></label>
                <input asp-for="MaxEndDate" class="form-control" />
                <span asp-validation-for="MaxEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" class="form-control" asp-items="ViewBag.AccountType"></select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-outline-dark btn-sm" />
            </div>
        </form>
    </div>
</div>
<div class="footer-spacing">

</div>
<div class="footer-links">
    <p>
        <a asp-action="Index">Terug naar lijst</a>
    </p>
</div>

