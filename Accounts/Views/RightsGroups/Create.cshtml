@model Accounts.Models.KdgrightsGroup

@{
    ViewData["Title"] = "Nieuwe rechtengroep aanmaken";
}

<h4>Nieuwe rechtengroep aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxEndDate" class="control-label"></label>
                <input asp-for="MaxEndDate" class="form-control" />
                <span asp-validation-for="MaxEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" class="form-control" asp-items="ViewBag.AccountType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-outline-dark btn-sm" />
            </div>
        </form>
    </div>
</div>
<div class="footer-spacing">

</div>
<div class="footer-links">
    <p>
        <a asp-action="Index">Terug naar lijst</a>
    </p>
</div>


